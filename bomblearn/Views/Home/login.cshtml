@model datacore.registerviewmodel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="noindex,nofollow">
    <title>گلد آموز</title>
    <link rel="stylesheet" href="~/Semantic-UI-CSS-master/semantic.min.css">
    <link rel="stylesheet" href="~/data/css/mycssaa.css">
    <link rel="stylesheet" href="~/data/css/logincss.css">
</head>

<body class="sec1login">
    <div class="ui mini modal" id="modal1">
        <div class="header txtright">
            ثبت نام با موفقیت انجام شد
        </div>
        <div class="content">
            <p class="txtright">لطفا برای فعالسازی اکانت خود ایمیل خود را چک کنید/بعد از چند ثانیه به صفحه اصلی راهنمایی میشوید</p>
        </div>
        <div class="actions">
            <div class="ui positive right labeled icon button">
                <a href="/index">صفحه اصلی</a>
                <i class="checkmark icon"></i>
            </div>
        </div>
    </div>
    <div class="ui mini modal" id="modal2">
        <div class="header txtright">
            ورود با موفقیت انجام شد
        </div>
        <div class="content">
            <p class="txtright">بعد از چند ثانیه شما به صفحه اصلی هدایت خواهی شد</p>
        </div>
        <div class="actions">
            <div class="ui positive right labeled icon button">
                <a href="/index">صفحه اصلی</a>
                <i class="checkmark icon"></i>
            </div>
        </div>
    </div>
    <h2 class="sec2login">ورود / ثبت نام در گلد آموز</h2>
    <div class="container sec2login" id="container">
        <div class="form-container sign-up-container">
            <form asp-action="register" method="post">
                <h1>ساخت حساب کاربری</h1>
                <input asp-for="username" class="txtright" type="text" placeholder="نام کاربری" />
                <input asp-for="useremail" class="txtright" type="email" placeholder="ایمیل" />
                <input asp-for="userpassword" class="txtright" type="password" placeholder="پسورد" />
                <input asp-for="reuserpassword" class="txtright" type="password" placeholder=" تکرار پسورد" />
                <button>ثبت نام</button>
                <div asp-validation-summary="All">

                </div>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form asp-action="login" method="post">
                <h1>ورود</h1>
                <input asp-for="username" class="txtright" type="text" placeholder="نام کاربری" />
                <input asp-for="userpassword" class="txtright" type="password" placeholder="پسورد" />
                <a href="/resetpassword">رمز عبورتان را فراموش کردید ؟</a>
                <button>ورود</button>
                <div asp-validation-summary="All">

                </div>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>!خوش برگشتی</h1>
                    <p>برای ارتباط با ما لطفا با اطلاعات شخصی خود وارد شوید</p>
                    <button class="ghost" id="signIn">ورود</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>!سلام رفیق</h1>
                    <p>مشخصات شخصی خود را وارد کرده و با ما یادگیری را شروع کنید</p>
                    <button class="ghost" id="signUp">ثبت نام</button>
                </div>
            </div>
        </div>
    </div>

    <div class="login-wrap sec3login">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1"
                                                                                     class="tab colorwhite">ورود</label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab colorwhite float_right">ثبت نام</label>
            <div class="login-form">
                <div class="sign-in-htm">
                    <form asp-action="login" method="post" class="formlogin">
                        <div class="group">
                            <label for="user" class="label">نام کاربری</label>
                            <input asp-for="username" type="text" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">پسورد</label>
                            <input asp-for="userpassword" type="password" class="input" data-type="password">
                        </div>
                        <div class="group">
                            <input id="check" type="checkbox" class="check" checked>
                            <label for="check"><span class="icon"></span> مرا به خاطر بسپار</label>
                        </div>
                        <div class="group">
                            <input type="submit" class="button" value="ورود">
                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <a class="colorwhite" href="/resetpassword">پسوردت یادت رفته ؟</a>
                        </div>
                        <div asp-validation-summary="All">

                        </div>
                    </form>

                </div>
                <div class="sign-up-htm">
                    <form asp-action="register" method="post" class="formlogin">
                        <div class="group">
                            <label for="user" class="label">نام کاربری</label>
                            <input asp-for="username" type="text" class="input">
                        </div>
                        <div class="group">
                            <label for="pass" class="label">پسورد</label>
                            <input asp-for="userpassword" type="password" class="input" data-type="password">
                        </div>

                        <div class="group">
                            <label for="pass" class="label">تکرار پسورد</label>
                            <input asp-for="reuserpassword" class="input" data-type="password" type="password" />
                        </div>
                        <div class="group">
                            <label for="pass" class="label">آدرس ایمیل</label>
                            <input asp-for="useremail" type="email" class="input">
                        </div>

                        <div class="group">
                            <input type="submit" class="button" value="ثبت نام">
                        </div>
                        <div asp-validation-summary="All">

                        </div>
                        <div class="hr"></div>
                        <div class="foot-lnk">
                            <label class="colorwhite" for="tab-1">قبلا ثبت نام کردید ؟</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <script src="~/data/js/loginhs.js"></script>
    <script src="~/data/js/jquery-3.3.1.min.js"></script>
    <script src="~/Semantic-UI-CSS-master/semantic.min.js"></script>
    <script src="~/data/js/myjs.js"></script>
    <script src="~/js/jquery.validate.min.js"></script>
    <script src="~/js/jquery.validate.unobtrusive.min.js"></script>
    @if (ViewBag.login == 1)
    {
        <script>
            $('#modal1')
                .modal('show')
                ;
            // Your delay in milliseconds
            var delay = 6000;
            setTimeout(function () { window.location = "/index"; }, delay);
        </script>
    }
    @if (ViewBag.login == 2)
    {
        <script>
            $('#modal2')
                .modal('show')
                ;
            // Your delay in milliseconds
            var delay = 4000;
            setTimeout(function () { window.location = "/index"; }, delay);
        </script>
    }
</body>

</html>